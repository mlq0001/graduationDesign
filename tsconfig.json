{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.tsx",
    "*.d.ts",
    "src/**/*.d.ts",
    "auto-imports.d.ts",
  ],
  "compilerOptions": {
    "noImplicitAny": false,
    "baseUrl": ".",
    // 用于设置解析非相对模块名称的基本目录，相对模块不会受到baseUrl的影响
    "paths": {
      // 用于设置模块名到基于baseUrl的路径映射
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "vite/client",
      "node"
    ],
    // 无法找到模块“@/http/api/login.js”的声明文件。的解决方法
    "target": "esnext",
    "lib": [
      "esnext",
      "DOM"
    ],
    "module": "esnext",
    "strict": false,
    "jsx": "preserve",
    "moduleResolution": "node"
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
